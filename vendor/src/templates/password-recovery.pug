extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Account'
  - var pageTitle = 'Password Recovery'

//- Navbar
block navbar
  include partials/navbar-solid

//- Page Content
block content
  .container.py-5.py-sm-6.py-md-7
    .row.justify-content-center.pt-4
      .col-lg-7.col-md-9.col-sm-11
        h1.h2.pb-3 Forgot your password?
        p.fs-sm Change your password in three easy steps. This helps to keep your new password secure.
        ul.list-unstyled.fs-sm.pb-1.mb-4
          li
            span.text-primary.fw-semibold.me-1 1.
            | Fill in your email address below.
          li
            span.text-primary.fw-semibold.me-1 2.
            | We'll email you a temporary code.
          li
            span.text-primary.fw-semibold.me-1 3.
            | Use the code to change your password on our secure website.
        .bg-secondary.rounded-3.px-3.py-4.p-sm-4
          form(novalidate).needs-validation.p-2
            .mb-3.pb-1
              label(for='recovery-email').form-label Enter your email address
              input(type='email' required)#recovery-email.form-control
              .invalid-feedback Please provide a valid email address!
            button(type='submit').btn.btn-primary Get new password
              

//- Footer
block footer
  include partials/footer-simple