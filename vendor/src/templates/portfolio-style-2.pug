        .masonry-grid-item(data-groups='["branding"]')
          .card.card-flip
            .card-flip-inner
              .card-flip-front
                img(src='img/portfolio/14.jpg' alt='Portfolio thumb').card-img
              a(href='portfolio-single-side-gallery-grid.html').card-flip-back
                .card-body
                  .card-body-inner
