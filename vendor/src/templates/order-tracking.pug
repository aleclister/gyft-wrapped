extends partials/layout

//- Override default config variables
append config
  - var parentMenu = 'Templates'
  - var pageTitle = 'Order Tracking'

//- Navbar
block navbar

  //- navbar-shop.pug template
  include partials/navbar-shop

//- Page Content
block content
  .container.pt-4.mb-2.pb-6
    +breadcrumb([{'title': 'Shop', 'link': 'shop-ls.html'}, {'title': 'Order tracking'}]).py-1.my-2
    h1.mb-3.pb-4 Tracking order: <span class='fw-normal'>34VB5540K83</span>

    // Details
    .row.mb-4
      .col-sm-4.mb-2
        .bg-secondary.h-100.p-4.text-center.rounded
          span.fw-medium.text-heading.me-2 Shipped via:
          | UPS Ground
      .col-sm-4.mb-2
        .bg-secondary.h-100.p-4.text-center.rounded
          span.fw-medium.text-heading.me-2 Status:
          | Processing order
      .col-sm-4.mb-2
        .bg-secondary.h-100.p-4.text-center.rounded
          span.fw-medium.text-heading.me-2 Expected date:
          | May 15, 2020
    
    // Progress
    .card.border-0.shadow
      .card-body
        .progress.mb-3(style='height: 4px;')
          .progress-bar(role='progressbar' style='width: 36%' aria-valuenow='34' aria-valuemin='0' aria-valuemax='100')
        .row.pt-4
          .col-lg-3.col-sm-6
            .d-flex.align-items-center.mb-4
              .bg-secondary.rounded-circle.border.text-center(style='width: 60px; height: 60px; line-height: 54px;')
                i.ai-shopping-bag.fs-xl.text-muted.align-middle
              .ps-3
                span.badge.bg-success.rounded-pill.mb-1
                  i.ai-check.me-1
                  | Completed
                h6.text-muted.mb-0 Order placed
          .col-lg-3.col-sm-6
            .d-flex.align-items-center.mb-4
              .rounded-circle.border.border-primary.text-center(style='width: 60px; height: 60px; line-height: 54px;')
                i.ai-settings.fs-xl.text-primary.align-middle
              .ps-3
                span.badge.bg-primary.rounded-pill.mb-1
                  | In progress
                h6.text-primary.mb-0 Processing order
          .col-lg-3.col-sm-6
            .d-flex.align-items-center.mb-4
              .rounded-circle.border.text-center(style='width: 60px; height: 60px; line-height: 54px;')
                i.ai-star.fs-xl.align-middle
              .ps-3
                span.d-block.text-muted.fs-ms.mb-1
                  | Third step
                h6.mb-0 Quality check
          .col-lg-3.col-sm-6
            .d-flex.align-items-center.mb-4
              .rounded-circle.border.text-center(style='width: 60px; height: 60px; line-height: 54px;')
                i.ai-package.fs-xl.align-middle
              .ps-3
                span.d-block.text-muted.fs-ms.mb-1
                  | Fourth step
                h6.mb-0 Product dispatched
    
    // Footer
    .d-sm-flex.flex-wrap.justify-content-between.align-items-center.text-center.pt-4
      .form-check.d-inline-block.mt-2.me-3
        input(type='checkbox' id='notify-me' checked).form-check-input
        label(for='notify-me').form-check-label.fs-sm Notify me when order is delivered
      a(href='dashboard-orders.html').btn.btn-primary.btn-sm.mt-2 View order details


//- Footer
block footer
  include partials/footer-shop
