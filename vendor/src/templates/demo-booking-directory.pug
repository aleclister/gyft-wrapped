      .d-sm-flex.align-items-center.flex-grow-1
        .mb-3.pb-1.w-100.mb-sm-4.me-sm-3
          label(for='from-destination').form-label From
          select#from-destination.form-select
            option(value='' disabled hidden) From where?
            option(value='Abu Dhabi, UAE') Abu Dhabi, UAE
            option(value='Amsterdam, NL') Amsterdam, NL
            option(value='Berlin, GER') 	Berlin, GER
            option(value='Brussels, BE') 	Brussels, BE
            option(value='Buenos Aires, ARG') Buenos Aires, ARG
            option(value='Canberra, AU') Canberra, AU
            option(value='London, UK' selected) London, UK
            option(value='Madrid, SP') Madrid, SP
            option(value='Monaco, MON') Monaco, MON
            option(value='Moscow, RU') Moscow, RU
            option(value='Stockholm, SW') Stockholm, SW
        .mb-3.pb-1.w-100.mb-sm-4.me-sm-3
          label(for='to-destination').form-label To
          select#to-destination.form-select
            option(value='' selected disabled hidden) To where?
            option(value='Abu Dhabi, UAE') Abu Dhabi, UAE
            option(value='Amsterdam, NL') Amsterdam, NL
            option(value='Berlin, GER') 	Berlin, GER
            option(value='Brussels, BE') 	Brussels, BE
            option(value='Buenos Aires, ARG') Buenos Aires, ARG
            option(value='Canberra, AU') Canberra, AU
            option(value='London, UK') London, UK
            option(value='Madrid, SP') Madrid, SP
            option(value='Monaco, MON') Monaco, MON
            option(value='Moscow, RU') Moscow, RU
            option(value='Stockholm, SW') Stockholm, SW
      .d-sm-flex.align-items-center
        .mb-3.pb-1.w-100.mb-sm-4.me-sm-3
          label.form-label Depart
          .input-group
            input(type='text' placeholder='Choose date' data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d", "defaultDate": "today", "minDate": "today"}' data-linked-input='#return-date').form-control.rounded.date-picker.date-range
            i.ai-calendar.align-middle.position-absolute.top-50.end-0.translate-middle-y.me-3
        .mb-3.pb-1.w-100.mb-sm-4.me-sm-3
          label.form-label Return
          .input-group
            input(type='text' placeholder='Choose date' data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}')#return-date.form-control.rounded.appended-form-control.date-picker
            i.ai-calendar.align-middle.position-absolute.top-50.end-0.translate-middle-y.me-3
        .text-center.text-sm-start.mt-2.mt-sm-4.mb-4
          button(type='submit').btn.btn-primary Search Flights
  

  // Offers carousel
  section.container.py-5.my-4.my-sm-0.py-sm-6.py-md-7
    h2.text-center.mb-4 Hot offers
