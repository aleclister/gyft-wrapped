extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = ['tiny-slider/dist/tiny-slider.css', 'flatpickr/dist/flatpickr.min.css']
  - var vendorScripts = ['jarallax/dist/jarallax.min.js', 'tiny-slider/dist/min/tiny-slider.js', 'flatpickr/dist/flatpickr.min.js', 'flatpickr/dist/plugins/rangePlugin.js']
  - var parentMenu = 'Demos'
  - var pageTitle = 'Booking / Directory'

//- Navbar
block navbar
  include partials/navbar-floating-light

//- Page Content
block content

  // Hero
  section.jarallax.bg-dark.py-7(data-jarallax data-speed='0.25')
    .jarallax-img(style='background-image: url(img/demo/booking/hero-bg.jpg);')
    .container.py-5.py-sm-7.text-center
      .py-md-6
        h1.text-light.pb-1 Search for cheap airline tickets
        p.fs-lg.text-light Makes it easier to experience the world.
  

  // Booking form
  form.container.position-relative.zindex-5(style='margin-top: -68px;')
