extends partials/layout

//- Override default config variables
append config
  - var vendorStyles = ['lightgallery.js/dist/css/lightgallery.min.css']
  - var vendorScripts = ['lightgallery.js/dist/js/lightgallery.min.js', 'jarallax/dist/jarallax.min.js', 'cleave.js/dist/cleave.min.js']
  - var parentMenu = 'Pages'
  - var pageTitle = 'Contacts v.2'

//- Navbar
block navbar
  include partials/navbar-solid

//- Page Content
block content

  // Page title
  section.jarallax.bg-gradient.pt-5.pb-7.pt-md-7(data-jarallax data-speed='0.25')
    span.position-absolute.top-0.start-0.w-100.h-100.bg-gradient.opacity-80
    .jarallax-img(style='background-image: url(img/pages/contacts/page-title-bg.jpg);')
    .container.position-relative.zindex-5.pt-3.pb-7.pt-md-0
      .row.justify-content-center.py-md-5
        .col-lg-6.col-md-8.text-center.pt-2.mb-n3
          h1.text-light Contacts
          p.text-light Get in touch with by completing the contact form or call us now. We normally respond within 2 business days.


  // Contact cards (details)
  section.container-fluid.bg-overlay-content.mb-5.mb-md-6(style='margin-top: -120px;')
    .row
      .col-lg-3.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow-lg.py-4
          .card-body.text-center
            i.ai-map-pin.mb-4.text-primary(style='font-size: 2.25rem;')
            h3.h6.mb-2 Address, Location
            p.fs-sm.mb-2 396 Lillian Blvd, Holbrook, NY 11741, USA
            a(href='#map' data-scroll).fancy-link.fs-sm
              | See on the map
      .col-lg-3.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow-lg.py-4
          .card-body.text-center
            i.ai-clock.mb-4.text-danger(style='font-size: 2.25rem;')
            h3.h6.mb-2 Working hours
            ul.list-unstyled.fs-sm.mb-0
              li Mon - Fri: 9AM - 8PM 
              li Sat: 10AM - 5PM
      .col-lg-3.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow-lg.py-4
          .card-body.text-center
            i.ai-phone.mb-4.text-success(style='font-size: 2.25rem;')
            h3.h6.mb-2 Phone numbers
            ul.list-unstyled.fs-sm.mb-0
              li
                span.me-1 Customer service:
                a(href='tel:+108044357260').nav-link-style +1 (080) 44 357 260
              li
                span.me-1 Tech support:
                a(href='tel:+100331697720').nav-link-style +1 00 33 169 7720
      .col-lg-3.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow-lg.py-4
          .card-body.text-center
            i.ai-mail.mb-4.text-warning(style='font-size: 2.25rem;')
            h3.h6.mb-2 Email addresses
            ul.list-unstyled.fs-sm.mb-0
              li
                span.me-1 Customer service:
                a(href='mailto:customer@example.com').nav-link-style customer@example.com
              li
                span.me-1 Tech support:
                a(href='mailto:support@example.com').nav-link-style support@example.com
          

  // Contact cards (offices)
  section.container.mb-5.mb-md-6
    h2.text-center.mb-4.pb-4 Our offices
    .row
      .col-lg-4.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow.mx-auto
          img(src='img/pages/contacts/orlando.jpg' alt='Orlando').card-img-top
          .card-body
            h5 Orlando, USA
            ul.list-unstyled.mb-0
              li.d-flex.align-items-start.pb-3.border-bottom
                i.ai-map-pin.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Find us
                  a(href='#').d-block.nav-link-style.fs-sm 514 S. Magnolia St. Orlando, FL 32806, USA
              li.d-flex.align-items-start.pt-2.pb-3.border-bottom
                i.ai-phone.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Call us
                  a(href='tel:+178632256040').d-block.nav-link-style.fs-sm +1 (786) 322 560 40
              li.d-flex.align-items-start.pt-2
                i.ai-mail.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Write us
                  a(href='mailto:orlando@example.com').d-block.nav-link-style.fs-sm orlando@example.com
      .col-lg-4.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow.mx-auto
          img(src='img/pages/contacts/chicago.jpg' alt='Chicago').card-img-top
          .card-body
            h5 Chicago, USA
            ul.list-unstyled.mb-0
              li.d-flex.align-items-start.pb-3.border-bottom
                i.ai-map-pin.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Find us
                  a(href='#').d-block.nav-link-style.fs-sm 76, Industrial Dr, West Chicago, IL 60185, USA
              li.d-flex.align-items-start.pt-2.pb-3.border-bottom
                i.ai-phone.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Call us
                  a(href='tel:+184725276533').d-block.nav-link-style.fs-sm +1 (847) 252 765 33
              li.d-flex.align-items-start.pt-2
                i.ai-mail.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Write us
                  a(href='mailto:chicago@example.com').d-block.nav-link-style.fs-sm chicago@example.com
      .col-lg-4.col-sm-6.mb-grid-gutter
        .card.h-100.border-0.shadow.mx-auto
          img(src='img/pages/contacts/newyork.jpg' alt='New York').card-img-top
          .card-body
            h5 New York, USA
            ul.list-unstyled.mb-0
              li.d-flex.align-items-start.pb-3.border-bottom
                i.ai-map-pin.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Find us
                  a(href='#').d-block.nav-link-style.fs-sm 396 Lillian Blvd, Holbrook, NY 11741, USA
              li.d-flex.align-items-start.pt-2.pb-3.border-bottom
                i.ai-phone.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Call us
                  a(href='tel:+1212477690000').d-block.nav-link-style.fs-sm +1 (212) 477 690 000
              li.d-flex.align-items-start.pt-2
                i.ai-mail.fs-lg.mt-2.mb-0.text-primary
                .ps-3
                  span.fs-ms.text-muted Write us
                  a(href='mailto:newyork@example.com').d-block.nav-link-style.fs-sm newyork@example.com
  
  
  // Map + Contact form
  section#map.border-top
    .row.g-0.gallery
      a(href='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d193595.91476818218!2d-74.11976253858133!3d40.69740344296443!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew%20York%2C%20NY%2C%20USA!5e0!3m2!1sen!2sua!4v1568574342685!5m2!1sen!2sua' data-iframe='true' data-sub-html='<h6 class="fs-sm text-light">396 Lillian Blvd, Holbrook, NY 11741</h6>' style='background-image:url(img/pages/contacts/map02.jpg);').col-lg-6.gallery-item.map-popup.d-flex.flex-columnt.justify-content-center.align-items-center.bg-position-center.bg-size-cover.py-7.text-center
        span.gallery-caption
          i.ai-maximize-2.fs-xl.mt-n1.me-2
          | Expand the map
        .d-inline-block.py-4.py-md-6
          img(src='img/pages/contacts/marker.png' alt='Map marker' width='48')
      .col-lg-6.px-3.px-lg-5
        .pt-5.pb-6.pt-md-6.mx-auto(style='max-width: 720px;')
          h2.h3.pb-4 Drop us a line
          form(novalidate).needs-validation.row
            .col-sm-6.mb-3.pb-1
              label(for='cont-fn').form-label
                | Full name
                sup.text-danger.ms-1 *
              input(type='text' id='cont-fn' placeholder='John Doe' required).form-control
              .invalid-feedback Please enter your full name!
            .col-sm-6.mb-3.pb-1
              label(for='cont-email').form-label
                | Email address
                sup.text-danger.ms-1 *
              input(type='email' id='cont-email' placeholder='j.doe@example.com' required).form-control
              .invalid-feedback Please enter a valid email address!
            .col-sm-6.mb-3.pb-1
              label(for='cont-phone').form-label Phone number
              input(type='text' id='cont-phone' data-format='custom' data-delimiter='-' data-blocks='2 4 2 2' placeholder='00-0000-00-00').form-control.bg-image-0
            .col-sm-6.mb-3.pb-1
              label(for='cont-subject').form-label Subject
              input(type='text' id='cont-subject' placeholder='Title of your message').form-control.bg-image-0
            .col-12.mb-3.pb-1
              label(for='cont-message').form-label
                | Message
                sup.text-danger.ms-1 *
              textarea(id='cont-message' rows='4' placeholder='Write your message here' required).form-control
              .invalid-feedback Please write a message!
            .col-12.pt-2
              button(type='submit').btn.btn-primary Send Message

//- Footer
block footer
  include partials/footer-default