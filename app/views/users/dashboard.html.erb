<div class="container position-relative zindex-5 pb-4 mb-md-3" style="margin-top: 100px;">
  <div class="row">
    <div class="col-lg-4 mb-4 mb-lg-0">
      <h1 class="h3 mb-3 text-nowrap text-sm-start">Upcoming Holidays<span class="d-inline-block align-middle bg-faded-dark fs-ms fw-medium rounded-1 py-1 px-2 ms-2">2</span></h1>
      <div class="upcoming-holidays bg-light rounded-3 shadow-lg">
        <div class="py-2 p-md-3">
      
          <div class="row" >
            <% @holidays.each do | holiday |  %>
            <div class="" style="padding-bottom: 20px;">
              <%= holiday.name %><br>
              <%= holiday.date %>
            </div>
            <% end %>
          </div>
        </div>          
      </div>
    </div>




    <div class="col-lg-8">

      <h1 class="h3 mb-3 text-nowrap text-sm-start">Relations<span class="d-inline-block align-middle bg-faded-dark fs-ms fw-medium rounded-1 py-1 px-2 ms-2">12</span></h1>

      <div class="row relations-avatars-container d-flex bg-light rounded-3 shadow-lg p-4">
        <% @relations.each do |relation|   %>
        <a class="" href="<%= relationprofile_path(:id=> relation.id) %>">
          <img src="<%= asset_url  'default_avatar.png' %>"  class="rounded-circle  mb-2"
          style="width:50px; height: 50px;">
          <br>
          <span><%= relation.first_name %></span>
        </a>
        <% end %>
        <button class="btn btn-translucent-primary btn-sm" type="button"><%= link_to 'Add', addRelation_path %></button>
      </div>
      <br>




      <h1 class="h3 mb-3 text-nowrap text-sm-start">Upcoming Birthdays<span class="d-inline-block align-middle bg-faded-dark fs-ms fw-medium rounded-1 py-1 px-2 ms-2">12</span></h1>
      <div class="row dashboard-upcoming-birthdays d-flex bg-light rounded-3 shadow-lg">
      <% @index=1 %>
      <% @sorting_relations.each do |sorting_relations|   %>
      <div  id="birth_sort_block" style="margin-top:20px; margin-bottom: 20px;">
        
        <div class="row" id="private_info">
          <div class="col-xs-2 avatar_part" style="padding-right: 30px;">
            <img src="<%= asset_url  'default_avatar.png' %>"  class="rounded-circle  mb-2"
                 style="width:50px; height: 50px;">
          </div>
          <div class="col-xs-3 left_info_part" style="padding-right: 80px;">
            <span>Name: <%= sorting_relations.first_name %> </span><br>
            <span>DAYS until:
              <%   @now=Time.now.to_date
                   @year=Time.now.to_date.year.to_s
                   @birthday=Date.parse(@year+ '/' +sorting_relations.date_of_birth)
                   @until_days=(@birthday-@now).to_i
              %>
              <%= @until_days %>
            </span>
          </div>
          <div class="col-xs-5" style="">
            <span>Hobbies:
              <% if @index==1 %>
                <% @hobbies1.each do |hobby1| %>
                   <%= hobby1.name %>,
                <% end %>
              <% else %>
              <% @hobbies2.each do |hobby2| %>
                   <%= hobby2.name %>,
                <% end %>
              <% end %>
            </span><br>
            <span>Relationship: <%= sorting_relations.relationship_name %> </span>
          </div>
        </div>


        <div>
          <% if @index==1 %>
            <div class="row" style="padding-top: 20px; ">
              <% @first_products.each do | products | %>
                <div class="col-xs" style="cursor:pointer; padding-right: 80px;  ">
                  <a href="<%= productshow_path(:id=> products.id ) %>"><%= products.name %> <br> Card</a>
                </div>
              <% end %>
              <% @index=2 %>
            </div>

          <% else %>
            <div class="row" >
              <% @second_products.each do | products | %>
                <div class="col-xs" style="cursor:pointer; padding-right: 80px;  ">
                  <a href="<%= productshow_path(:id=> products.id ) %>"><%= products.name %> <br> Card</a>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>

    </div>
  </div>
</div>



</body>
  
