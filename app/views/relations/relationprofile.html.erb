<div class="relation-profile-container" style="padding-top: 150px;">
  <section style="padding-left:200px; padding-right: 200px;">
      <div class="row">
        <div class="col-xs-2">
          <img src="<%= asset_url  'default_avatar.png' %>"  class="rounded-circle  mb-2"
               style="width:50px; height: 50px;">
        </div>
        <div class="col-xs-4" style="padding-left:50px;">
          <span>Name: <%= @relations.first_name %> </span><br>
          <span>Hobby: <% @hobbies.each do |hobby| %>
              <%= hobby.name %> ,
            <% end %>
          </span><br>
          <span>Relationship: <%= @relation_name %> </span>
        </div>
        <div class="col-xs-4" style="padding-left:50px;">
          <span>Price range: $<%= @from %> ~ $<%= @to %></span><br>
          <span>Birthday: <%= @birthday.month.to_s+ '-' +@birthday.day.to_s %> </span><br>
        </div>
      </div>
    <div class="row" style="padding-top: 20px; ">
      <% @products.each do | product | %>
        <div class="col-xs" style="cursor:pointer; padding-right: 80px;  ">
          <%= product.name %> <br> Card
        </div>
      <% end %>
    </div>
  </section>
</div>