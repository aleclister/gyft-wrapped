          $.ajax({
              url: "<%= product_data_stats_path %>",
              type: "POST",
              data: {"gender" : $(this).val()},
              dataType: "json",
              success: function(data) {
                  console.log(data);
                  $('#data_stats').replaceWith(data.html)
              }
          });
      });
      $("#product_age").change(function() {
          console.log($('#product_age').val());
          $.ajax({
              url: "<%= product_data_stats_path %>",
              type: "POST",
              data: {"age" : $(this).val()},
              dataType: "json",
              success: function(data) {
                  console.log(data);
                  $('#data_stats').replaceWith(data.html);
              }
          });
      });
  })
</script>